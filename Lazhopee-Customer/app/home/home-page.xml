<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
 xmlns:PullRefresh="@nativescript-community/ui-pulltorefresh">
    
    <ActionBar title="Lazhopee">
        <ActionBar.actionItems>
             <ActionItem text="My Cart " tap="goToCart"/>
             <ActionItem text="My Order Status" tap="goToOrder"/>
        </ActionBar.actionItems>
    </ActionBar>

    <PullRefresh:PullToRefresh refresh="refreshList">
    <GridLayout>
       <ListView id="productList" items="{{product}}" itemTap="productDetails">
         <ListView.itemTemplate>
         <StackLayout>
            <Image src="{{image}}"/>
            <Label text="{{name || 'Unkown ShortUrl'}}" class="shortUrl"/>
            <Label text="{{sellingPrice || 'Unkown ShortUrl'}}" class="shortUrl"/>
           </StackLayout>
        </ListView.itemTemplate>
    </ListView>
    </GridLayout>
     </PullRefresh:PullToRefresh>
</Page>

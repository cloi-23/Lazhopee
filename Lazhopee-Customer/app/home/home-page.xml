<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
 xmlns:PullRefresh="@nativescript-community/ui-pulltorefresh">
    
    <ActionBar title="Lazhopee" icon="~/images/Lazhopee.png">
        <ActionBar.actionItems  >
             <ActionItem tap="goToCart" position="left" text="{{cart}}" >
               </ActionItem>
            
             <ActionItem text="My Order Status" tap="goToOrder"/>
        </ActionBar.actionItems>
    </ActionBar>
    <PullRefresh:PullToRefresh refresh="refreshList">
    <GridLayout>
       <ListView id="productList" items="{{product || []}}" itemTap="productDetails">
         <ListView.itemTemplate>
         <StackLayout>
            <GridLayout columns="*, 2*" rows="2*" >
               <Image src="{{image}}" row="0" col="0"/>
               <GridLayout columns=" 2*" rows="2*, 3*"  row="0" col="1" class="product" >
               <Label text="{{name || 'Unkown name'}}" row="0" col="1" class="title"  textWrap="true"/>
               <Label text="{{sellingPrice || 'Unkown sellingPrice'}}"   class="price" row="1" col="2"/>
               </GridLayout>
             </GridLayout>
            
           </StackLayout>
        </ListView.itemTemplate>
    </ListView>
    </GridLayout>
     </PullRefresh:PullToRefresh>
     
</Page>
